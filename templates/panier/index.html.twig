{% block body %}
    <div class="container pt-5 pb-3">
        <div class="text-center mb-3 pb-3">
            <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">Cart</h6>
            <h1>Add To Cart</h1>
        </div>
        {% if cart is empty %}
            <div class="alert alert-warning text-center" role="alert">
                Votre panier est vide.
            </div>
        {% else %}
            <table class="table table-striped table-bordered">
                <thead class="thead-light">
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% set totalGeneral = 0 %}
                {% for item in cart %}
                    <tr>
                        <td>
                            <div style="display: flex; align-items: center;">
                                {% if item.article.photo %}
                                    <img src="{{ asset('uploads/photos/' ~ item.article.photo) }}" alt="{{ item.article.name }}" width="50" style="margin-right: 15px;">
                                {% else %}
                                    <span>No Photo</span>
                                {% endif %}
                                <span>{{ item.article.name }}</span>
                            </div>
                        </td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.article.prix | number_format(2, ',', ' ') }} TND</td>
                        <td>{{ (item.article.prix * item.quantity) | number_format(2, ',', ' ') }} TND</td>
                       <td><a href="{{ path('cart_remove', {id: item.article.id}) }}" ><i class="fa-solid fa-trash-can custom-trash"></i></a></td>
                    </tr>
                    {% set totalGeneral = totalGeneral + (item.article.prix * item.quantity) %}
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="3" class="text-right"><strong>Total Amount</strong></td>
                    <td>
                        {{ totalGeneral | number_format(2, ',', ' ') }} TND
                    </td>
                </tr>
                </tfoot>
            </table>

        {% endif %}
    </div>
{% endblock %}

