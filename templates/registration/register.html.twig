    <style>
        /* Style général de la page */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f5f5;

            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        /* Conteneur du formulaire */
        .register-form {
            padding: 40px;
            border-radius: 8px;

            width: 100%;
            max-width: 900px;
            text-align: center;
        }

        /* Titre du formulaire */
        h1 {
            font-size: 32px;
            color: #333;
            margin-bottom: 20px;
            font-weight: 600;
        }



        /* Style des labels */
        label {
            font-size: 14px;
            color: #777;
            margin-bottom: 5px;
            display: block;
            text-align: left;
        }

        /* Style du bouton de soumission */

        .btn-primary {
            width: 100%;
            padding: 14px;
            background-color: #4cae4c;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

        /* Effet au survol du bouton */
        .btn-primary:hover {
            background-color: #1e7e34;
        }

        /* Style des messages d'erreur */
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            padding: 10px 20px;
            border-radius: 5px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        /* Style des messages d'erreur */
