            border: 1px solid #f5c6cb;
            padding: 10px 20px;
            border-radius: 5px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        /* Espacement entre les éléments */
        .mb-3 {
            margin-bottom: 1rem;
        }

        /* Style de la page mobile */
        @media (max-width: 600px) {
            .register-form {
                padding: 25px;
            }

            h1 {
                font-size: 28px;
            }
        }

        /* Disposition des champs Name et LastName sur une ligne */
        .form-row {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 20px; /* Espacement entre les lignes */
        }

        .form-row .form-control {
            flex: 1;
        }

        /* Alignement du champ Agree Terms avec un espacement correct */
        .agree-terms {
            display: flex;
            align-items: center;
            margin-top: 20px;
            justify-content: flex-start;
        }

        .agree-terms input {
            margin-right: 10px;
        }

        /* Style des petits textes sous les champs */
        small {
            display: block;
            margin-top: 10px;
            font-size: 14px;
            color: #666;
        }
    </style>



