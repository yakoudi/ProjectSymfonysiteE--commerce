        {{ form_row(registrationForm.adresse, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.codePostal, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
        <p>Informations de connexion</p>
        <hr>
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control'}}) }}

        <!-- Agreed Terms aligné correctement avec le reste du formulaire -->
        <div class="agree-terms">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>


        <button type="submit" class="btn btn-primary">   Register </button>
        {{ form_end(registrationForm) }}

