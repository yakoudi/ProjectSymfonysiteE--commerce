        <nav class="navbar navbar-expand-lg bg-light navbar-light shadow-lg py-3 py-lg-0 pl-3 pl-lg-5">
            <a href="{{ path('campify') }}" class="navbar-brand">
                <h1 class="m-0 text-primary"><span class="text-dark">CAMPIFY</span>TN</h1>
            </a>
