    <link href="{{ asset('lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css') }}" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <style>
        /* Modal Styles */
        .modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            display: none;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            display: flex;
            background-color: #fff;
            border-radius: 8px;
            width: 800px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .modal-header {
            display: flex;
            justify-content: space-between; /* Ajout pour espacer le titre et le bouton */
            align-items: center; /* Centre verticalement le titre et le bouton */
            padding: 10px;
            position: relative;
        }

        .modal-title {
            font-size: 1.3rem; /* Taille de la police pour le titre */
            color: #333; /* Couleur du texte */
            margin: 0; /* Pour éviter tout espace par défaut */
            margin-left: 25px; /* Décale le titre vers la droite */
        }

        .close-btn {
            font-size: 35px;
            color: #333;
            background-color: transparent;
            border: none;
            cursor: pointer;
        }

        .modal-body {
            display: flex;
            width: 100%;
        }

        .modal-body img {
            width: 250px;
            height: 250px;
            object-fit: cover;
            border-radius: 8px;
            margin: 15px;
        }

        .modal-details {
            flex-grow: 1;
            padding: 15px;
            display: flex;
            flex-direction: column;
        }

        .modal-details h4 {
            margin-top: 0;
        }

        .modal-details p {
            margin: 5px 0;
        }

        .modal-details .date {
            margin-top: auto;
            text-align: right;
            font-size: 0.9rem;
            color: #666;
        }
        .modal-buttons {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
        }

        .modal-buttons button {
            width: 100px;
            height: 35px; /* Ajustez la taille du bouton comme souhaité */
            font-size: 0.8rem; /* Taille de la police plus petite */
        }
    </style>
</head>


<body>
