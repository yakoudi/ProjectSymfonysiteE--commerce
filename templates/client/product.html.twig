                    <a href="{{ path('campify') }}" class="nav-item nav-link ">Home</a>
                    <a href="{{ path('about') }}" class="nav-item nav-link">About</a>
                    <a href="{{ path('article_client') }}" class="nav-item nav-link"> Tour Shop</a>
                    <a href="{{ path('service') }}" class="nav-item nav-link">Services</a>
                    <a href="{{ path('contact') }}" class="nav-item nav-link">Contact</a>
                    <a href="{{ path('cart') }}" class="nav-item nav-link active">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                    <a href="{{ path('app_login') }}" class="nav-item nav-link active">
                        <i class="fa-regular fa-user"></i>
                    </a>
                </div>
            </div>
        </nav>
    </div>
</div>
<!-- Navbar End -->




<!-- Header Start -->
<div class="container-fluid page-header">
    <div class="container">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
            <h3 class="display-4 text-white text-uppercase">Shop</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0 text-uppercase"><a class="text-white" href="">Home</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase">Shop</p>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->


<!-- Booking Start -->
<div class="container-fluid booking mt-5 pb-5">
    <div class="container pb-5">
        <form method="GET" action="{{ path('article_client') }}">
            <div class="bg-light shadow" style="padding: 30px;">
                <div class="row align-items-center" style="min-height: 60px;">
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-12">
                                <input
                                        type="text"
                                        class="form-control p-4"
                                        name="search"
                                        value="{{ app.request.get('search') }}"
                                        placeholder="Search" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary btn-block" type="submit" style="height: 47px;">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Booking End -->
<!-- Modal -->
<div class="modal" id="articleModal">
    <div class="modal-content">

        <div class="modal-header">
            <h6 class="modal-title">    Product Details</h6>

            <button class="close-btn" onclick="closeModal()">&times;</button>
        </div>
        <div class="modal-body">
            <img id="modalArticleImage" alt="Article Image">
            <div class="modal-details">
                <h4 id="modalArticleName"></h4>
                <h5 id="modalArticlePrice"></h5>
                <p id="modalArticleDescription"></p>
                <br>
                <div class="modal-buttons">
                    <button class="btn btn-primary btn-sm" type="submit">Location</button>
                    <button class="btn btn-primary btn-sm" type="submit">Add to cart</button>
                </div>
                <!--   <p class="date" id="modalArticleDate"></p> -->
            </div>
        </div>
    </div>
</div><!-- Packages Start -->
<div class="container-fluid py-15">
    <div class="container pt-5 pb-3">
        <div class="text-center mb-3 pb-3">
            <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">Shop</h6>
            <h1>Perfect Tour Shop</h1>
        </div>
        <div class="row">
            {% if articles|length == 0 %}
                <div class="col-12 text-center">
                    <p class="text-muted">No articles found for your search.</p>
                </div>
            {% else %}
                {% for article in articles %}
                    <div class="col-lg-4 col-md-4 mb-4">
                        <div class="package-item bg-white mb-2">
                            <!-- Photo de l'article -->
                            <img
                                    class="img-fluid"
                                    src="{{ asset('uploads/photos/' ~ article.photo) }}"
                                    alt="{{ article.name }}"
                                    style="text-align: center"
                            >
                            <div class="p-4">
                                <div class="d-flex justify-content-between mb-3">
                                    <!-- Pays (Statique : Tunisia) -->
                                    <small class="m-0"><i class="fa fa-map-marker-alt text-primary mr-2"></i>Tunisia</small>
                                </div>
                                <!-- Nom de l'article -->
                                <a href="{{ path('article_details', {'id': article.id}) }}" class="h5 text-decoration-none">{{ article.name }}</a>

                                <div class="border-top mt-4 pt-4">

                                    <div class="d-flex justify-content-between">
                                        <!-- Évaluation (Statique : 4.5 étoiles) -->
                                        <h6 class="m-0"><i class="fa fa-star text-primary mr-2"></i>4.5</h6>
                                        <!-- Prix de l'article -->
                                        <h5 class="m-0">{{ article.prix | number_format(2, '.', ',') }} TND</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
<!-- Packages End -->




<!-- Content -->
{% block body %}{% endblock %}

