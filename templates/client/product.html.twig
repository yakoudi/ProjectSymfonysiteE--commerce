<!-- JavaScript for Modal -->
<script>
    function openModal(name, price, description, photo) {
        document.getElementById('modalArticleName').textContent = name;
        document.getElementById('modalArticlePrice').textContent = price + ' TND';
        document.getElementById('modalArticleDescription').textContent = description;
        document.getElementById('modalArticleImage').src = '{{ asset('uploads/photos/') }}/' + photo;

        document.getElementById('articleModal').style.display = 'flex';
    }

    function closeModal() {
        document.getElementById('articleModal').style.display = 'none';
    }
</script><script src="{{ asset('js/contact.js') }}"></script>

