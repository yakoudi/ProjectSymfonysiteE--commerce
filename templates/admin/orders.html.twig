<div class="content-wrapper">
    <div class="container">
        <div class="row pad-botm">
            <div class="col-md-12">
                <h4 class="header-line"> Orders List</h4>

                <div class="row" style="margin-top: 40px">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                Orders List
                            </div>
                              <div class="panel-body">
                                {% if cart is empty %}
                                    <div class="alert alert-warning text-center" role="alert">
                                        Aucun article dans les paniers.
                                    </div>
                                {% else %}
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Quantité</th>
                                            <th>Prix Unitaire</th>
                                            <th>Total</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% set totalGeneral = 0 %}
                                        {% for item in cart %}
                                            <tr>
                                                <td>{{ item.article.name }}</td>
                                                <td>{{ item.quantity }}</td>
                                                <td>{{ item.article.prix | number_format(2, ',', ' ') }} TND</td>
                                                <td>{{ (item.article.prix * item.quantity) | number_format(2, ',', ' ') }} TND</td>
                                            </tr>
                                            {% set totalGeneral = totalGeneral + (item.article.prix * item.quantity) %}
                                        {% endfor %}
                                        </tbody>
                                        <tfoot>
                                        <tr>
                                            <td colspan="3" class="text-right"><strong>Total Général</strong></td>
                                            <td>{{ totalGeneral | number_format(2, ',', ' ') }} TND</td>
                                        </tr>
                                        </tfoot>
                                    </table>
                                {% endif %}
                            </div>

                        </div>
                    </div>
                </div>
