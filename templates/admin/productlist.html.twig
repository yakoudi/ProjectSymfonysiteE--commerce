                <img src="{{ asset('assets/img/logo.png') }}" alt="Logo" />
            </a>
        </div>

        <div class="right-div">
            <a href="#" class="btn btn-danger pull-right">LOG ME OUT</a>
        </div>
    </div>
</div>
<!-- LOGO HEADER END-->
<section class="menu-section">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <div class="navbar-collapse collapse">
                    <ul id="menu-top" class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('dashboard') }}" class="menu-top-active">DASHBOARD</a></li>
                        <li><a href="{{ path('article') }}">ADD PRODUCTS</a></li>
                        <li><a href="{{ path('articlelist') }}">PRODUCTS LIST</a></li>
                        <li><a href="{{ path('contactlist') }}">CONTACTS LIST</a></li>
                        <li><a href="{{ path('admin_orders') }}">ORDERS LIST</a></li>
                        <li><a href="{{ path('app_user_list') }}">USERS LIST</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- MENU SECTION END-->
<div class="content-wrapper">
    <div class="container">
        <div class="row pad-botm">
            <div class="col-md-12">
                <h4 class="header-line">PRODUCTS LIST</h4>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        Products
                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            {# templates/admin/productlist.html.twig #}

                            {# templates/admin/productlist.html.twig #}

                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th class="description-column">Description</th>
                                    <th>Date</th>
                                    <th>Photo</th>
                                    <th>Actions</th> <!-- Add Actions column -->
                                </tr>
                                </thead>
                                <tbody>
                                {% for article in articles %}
                                    <tr class="odd gradeX">
                                        <td>{{ article.name }}</td>
                                        <td>{{ article.prix }}</td>
                                        <td>{{ article.description }}</td>
                                        <td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
                                        <td>
                                            {% if article.photo %}
                                                <img src="{{ asset('uploads/photos/' ~ article.photo) }}" alt="photo" width="50">
                                            {% else %}
                                                No Photo
                                            {% endif %}
                                        </td>
                                        <td>
                                            {# Update Button #}
                                            <a href="{{ path('article_update', {id: article.id}) }}" class="btn btn-warning btn-sm">Update</a>

                                            {# Delete Button #}
                                            <a href="{{ path('article_delete', {id: article.id}) }}" class="btn btn-danger btn-sm"
                                               onclick="return confirm('Are you sure you want to delete this article?');">Delete</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">No articles found.</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
</div>
<!-- CONTENT-WRAPPER SECTION END-->
